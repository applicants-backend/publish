<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/socket.io/socket.io.js"></script>
    <title>Document</title>
</head>
<body>
    <div>Practice 1</div>

        <button onclick="hello()">hello</button>
        <button onclick="study()">study</button>
        <button onclick="bye()">bye</button>
        <p id="voteForm"></p>
    <script>
        const socket = io();
        const p = document.querySelector('#voteForm');

        function hello() {
            socket.emit('hello', {name : "client" , message : 'hello'})
            socket.on("cbHello", (data) => {
                p.textContent = `${data.name} : ${data.message}`
            })
        }

        function study() {
            socket.emit('study', {name : "client" , message : 'study'})
            socket.on("cbStudy", (data) => {
                p.textContent = `${data.name} : ${data.message}`
            })
        }

        function bye() {
            socket.emit('bye', {name : "client" , message : 'bye'})
            socket.on("cbBye", (data) => {
                p.textContent = `${data.name} : ${data.message}`
            })
        }

    </script>
</body>
</html>